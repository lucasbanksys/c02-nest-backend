datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Personagem {
  id        Int    @id @default(autoincrement())
  nome      String
  imagemUrl String

  origem   Localizacao @relation(fields: [origemId], references: [id])
  origemId Int
}

model Localizacao {
  id   Int    @id @default(autoincrement())
  nome String

  personagens Personagem[]
}

model Usuario {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
  nome  String
}
